<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lonn.studentassistant">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.implementations.authentication.AuthenticationActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="www"
                    android:host="lonn" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.implementations.student.StudentActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".activities.implementations.authentication.AuthenticationActivity"/>

        <activity
            android:name=".activities.implementations.debug.DebugActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".activities.implementations.authentication.AuthenticationActivity"/>

        <activity
            android:name=".activities.implementations.courseEntity.CourseEntityActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activities.implementations.professorEntity.ProfessorEntityActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <service android:name=".services.implementations.loginService.LoginService" />
        <service android:name=".services.implementations.registerService.RegisterService" />
        <service android:name=".services.implementations.credentialsCheckService.CredentialsCheckService" />
        <service android:name=".services.implementations.studentService.StudentService" />
        <service android:name=".services.implementations.coursesService.CourseService"
            android:stopWithTask="false"/>
        <service android:name=".services.implementations.userService.UserService" />
        <service android:name=".services.implementations.professorService.ProfessorService" />
        <service android:name=".services.implementations.gradeService.GradeService" />
        <service android:name=".services.implementations.scheduleService.ScheduleService" />

        <receiver android:name=".services.StartupReceiver" >
            <intent-filter>
                <action android:name="RestartStudentService" />
                <action android:name="RestartCourseService" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>