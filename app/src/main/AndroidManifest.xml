<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lonn.studentassistant">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.implementations.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="www"
                    android:host="lonn" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.implementations.student.StudentActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".activities.implementations.login.LoginActivity"/>

        <activity
            android:name=".activities.implementations.debug.DebugActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".activities.implementations.login.LoginActivity"/>

        <activity
            android:name=".activities.implementations.register.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".activities.implementations.login.LoginActivity"/>

        <activity
            android:name=".activities.implementations.courseEntity.CourseEntityActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activities.implementations.professorEntity.ProfessorEntityActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activities.implementations.otheractivityEntity.OtherActivityEntityActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>