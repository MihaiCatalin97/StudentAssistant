<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Shadow">
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="LightBlueShadow" parent="Shadow">
        <item name="android:shadowColor">@color/colorPrimary</item>
    </style>

    <style name="DarkBlueShadow" parent="Shadow">
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LightBlueShadow_DarkBlue" parent="LightBlueShadow">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DarkBlueShadow_LightBlue" parent="DarkBlueShadow">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DarkBlueTitle" parent="LightBlueShadow_DarkBlue">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DarkBlueSubtitle" parent="LightBlueShadow_DarkBlue">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DarkBlueTextView" parent="LightBlueShadow_DarkBlue">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LightBlueTitle" parent="DarkBlueShadow_LightBlue">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LightBlueSubtitle" parent="DarkBlueShadow_LightBlue">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LightBlueTextView" parent="DarkBlueShadow_LightBlue">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallDarkBlueTextView" parent="LightBlueShadow_DarkBlue">
        <item name="android:textSize">14sp</item>
    </style>
</resources>