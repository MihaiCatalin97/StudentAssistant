<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutLogin" />

    <include
        layout="@layout/register_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/layoutRegister1"/>

    <include
        layout="@layout/register_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/layoutRegister2"/>

    <include
        layout="@layout/register_layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/layoutRegister3"/>

</RelativeLayout>