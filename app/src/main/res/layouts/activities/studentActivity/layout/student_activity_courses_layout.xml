<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        style="@style/DarkBlueTitle"
        android:id="@+id/titleCoursesLayout"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Courses"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/titleCoursesLayout"
        app:layout_constraintTop_toBottomOf="@id/titleCoursesLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseBaseCategory
                android:id="@+id/coursesBaseCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:category_title="Courses"
                app:view_type="full"
                app:show_base_header="false">

                <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:category_title="First year"
                    app:view_type="partial">

                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:category_title="First semester"/>
                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:category_title="Second semester"/>

                </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory>

                <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:category_title="Second year">

                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:category_title="First semester"/>
                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:category_title="Second semester"/>

                </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory>

                <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:category_title="Third year">

                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:category_title="First semester"/>
                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:category_title="Second semester"/>

                </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory>

            </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseBaseCategory>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>