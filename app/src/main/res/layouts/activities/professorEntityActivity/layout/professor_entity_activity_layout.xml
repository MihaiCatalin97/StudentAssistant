<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="professor"
            type="com.lonn.studentassistant.viewModels.ProfessorViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/solid_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/professorImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Professor Image"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@{professor.professorImage}" />

        <TextView
            android:id="@+id/professorName"
            style="@style/DarkBlueTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@{professor.fullName}"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorImage" />

        <TextView
            android:id="@+id/professorEmail"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@{`Email: ` + professor.email}"
            android:textSize="18sp"
            android:visibility="@{professor.emailVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorName" />

        <TextView
            android:id="@+id/professorPhoneNumber"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Phone number: ` + professor.phoneNumber}"
            android:textSize="18sp"
            android:visibility="@{professor.phoneNumberVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorEmail" />

        <TextView
            android:id="@+id/professorWebsite"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Website: ` + professor.website}"
            android:textSize="18sp"
            android:visibility="@{professor.websiteVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorPhoneNumber" />

        <TextView
            android:id="@+id/professorCabinet"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Cabinet: ` + professor.cabinet}"
            android:textSize="18sp"
            android:visibility="@{professor.cabinetVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorWebsite" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/professorCabinet"
            app:layout_constraintTop_toBottomOf="@id/professorCabinet">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.lonn.studentassistant.views.implementations.scrollViewLayouts.CoursesPartialScrollView
                        android:id="@+id/scrollViewProfessorEntities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.lonn.studentassistant.views.implementations.scrollViewLayouts.OtherActivityPartialScrollView
                        android:id="@+id/scrollViewActivityEntities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>