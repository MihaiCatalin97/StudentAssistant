<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="categoryModel"
            type="com.lonn.studentassistant.viewModels.CategoryViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dotted_transparent_background"
        android:padding="5dp"
        android:onClick="tapAdd"
        android:tag="@{categoryModel.entityName}">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iconPlus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="Plus icon"
            app:srcCompat="@drawable/ic_plus"/>

        <TextView
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iconPlus"
            app:layout_constraintLeft_toRightOf="@id/iconPlus"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@{`Add new ` + categoryModel.entityName}"/>
    </android.support.constraint.ConstraintLayout>
</layout>