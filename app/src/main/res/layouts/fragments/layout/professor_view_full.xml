<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="professor"
            type="com.lonn.studentassistant.viewModels.ProfessorViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/professorImage"
            android:contentDescription="Professor image"
            app:srcCompat="@{professor.professorImage}"/>

        <TextView
            android:id="@+id/professorName"
            style="@style/DarkBlueSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@id/professorImage"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{professor.fullName}"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/professorEmail"
            style="@style/SmallDarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@id/professorImage"
            app:layout_constraintTop_toBottomOf="@id/professorName"
            android:text="@{`Email: ` + professor.email}"
            android:visibility="@{professor.emailVisible}"/>

        <TextView
            android:id="@+id/professorPhoneNumber"
            style="@style/SmallDarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@id/professorImage"
            app:layout_constraintTop_toBottomOf="@id/professorEmail"
            android:text="@{`Phone number: ` + professor.phoneNumber}"
            android:visibility="@{professor.phoneNumberVisible}"/>

        <TextView
            android:id="@+id/professorWebsite"
            style="@style/SmallDarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@id/professorImage"
            app:layout_constraintTop_toBottomOf="@id/professorPhoneNumber"
            android:text="@{`\n` + professor.website}"
            android:visibility="@{professor.websiteVisible}"/>


    </android.support.constraint.ConstraintLayout>
</layout>