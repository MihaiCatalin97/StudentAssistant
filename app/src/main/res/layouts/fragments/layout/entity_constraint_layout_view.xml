<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="entity"
            type="com.lonn.studentassistant.viewModels.ScrollViewEntityViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/entityImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="Entity image"
            app:srcCompat="@{entity.image}"
            android:visibility="@{entity.image == 0? View.GONE : View.VISIBLE}"
            android:onClick="tapScrollViewEntityLayout"/>

        <TextView
            style="@style/DarkBlueSubtitle"
            android:id="@+id/entityField1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/entityImage"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@{entity.field1}"
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="tapScrollViewEntityLayout"/>

        <TextView
            android:id="@+id/entityField2"
            style="@style/SmallDarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@id/entityImage"
            app:layout_constraintTop_toBottomOf="@id/entityField1"
            app:layout_constraintRight_toLeftOf="@id/entityRemoveButton"
            android:text="@{entity.field2}"
            android:onClick="tapScrollViewEntityLayout"/>

        <TextView
            android:id="@+id/entityField3"
            style="@style/SmallDarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@id/entityImage"
            app:layout_constraintTop_toBottomOf="@id/entityField2"
            app:layout_constraintRight_toLeftOf="@id/entityRemoveButton"
            android:text="@{entity.field3}"
            android:maxLines="2"
            android:onClick="tapScrollViewEntityLayout"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/entityRemoveButton"
            app:layout_constraintBottom_toBottomOf="@id/entityField3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/entityField2"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_close"
            android:scaleType="fitCenter"
            android:layout_marginBottom="4dp"
            android:visibility="@{entity.permissionLevel > 0? View.VISIBLE:View.GONE}"
            android:onClick="tapRemove"/>

    </android.support.constraint.ConstraintLayout>
</layout>