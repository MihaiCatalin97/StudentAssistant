<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_background"
    android:orientation="vertical"
    android:padding="@dimen/dim_16dp"
    android:weightSum="1">

    <TextView
        style="@style/DarkTitleShadowed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Announcement Input"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8dp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            style="@style/DarkNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/announcementInputDialogTitle"
            style="@style/DarkNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_weight="1"
            android:hint="Enter announcement title"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        style="@style/DarkNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="@dimen/dim_8dp"
        android:text="Message:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/announcementInputDialogMessage"
        style="@style/DarkNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:layout_weight="1"
        android:hint="Enter announcement message"
        android:lines="2"
        android:textStyle="bold" />

    <TextView
        style="@style/DarkNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8dp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:text="Visible for:"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8dp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:weightSum="1">

        <CheckBox
            android:id="@+id/announcementInputDialogStudentTarget"
            style="@style/DarkNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_weight="0.5"
            android:maxLines="2"
            android:text="Students"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/announcementInputDialogProfessorTarget"
            style="@style/DarkNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_weight="0.5"
            android:maxLines="2"
            android:text="Professors"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonNegative"
            style="@style/BlueRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel" />

        <RelativeLayout
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_0dp"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/buttonPositive"
            style="@style/BlueRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Submit" />
    </LinearLayout>

</LinearLayout>