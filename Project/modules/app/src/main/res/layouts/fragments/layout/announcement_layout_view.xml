<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:onClick="tapScrollViewEntityLayout">

    <data>

        <import type="android.view.View" />

        <import type="com.lonn.studentassistant.firebaselayer.dataAccessLayer.entities.enums.PermissionLevel" />

        <import type="com.lonn.studentassistant.utils.Utils" />

        <variable
            name="announcement"
            type="com.lonn.studentassistant.firebaselayer.businessLayer.viewModels.AnnouncementViewModel" />

        <variable
            name="editing"
            type="Boolean" />

        <variable
            name="unlinkable"
            type="Boolean" />

        <variable
            name="deletable"
            type="Boolean" />

        <variable
            name="canApprove"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/CategoryEntityWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/entityField1"
            style="@style/CategoryEntityTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@{announcement.title}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/entityApproveButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/entityField2"
            style="@style/CategoryEntityText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_0dp"
            android:text="@{Utils.dateToStringDate(announcement.date)}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/entityApproveButton"
            app:layout_constraintTop_toBottomOf="@id/entityField1" />

        <TextView
            android:id="@+id/entityField3"
            style="@style/CategoryEntityText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8dp"
            android:maxLines="100"
            android:text="@{announcement.message}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/entityApproveButton"
            app:layout_constraintTop_toBottomOf="@id/entityField2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/entityApproveButton"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:onClick="tapRemove"
            android:scaleType="fitCenter"
            android:visibility="@{(editing==null || !editing) &amp;&amp; canApprove!=null &amp;&amp; canApprove? View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/entityField3"
            app:layout_constraintRight_toLeftOf="@id/entityRemoveButton"
            app:layout_constraintTop_toTopOf="@id/entityField1"
            app:srcCompat="@android:drawable/ic_input_add" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/entityRemoveButton"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:onClick="tapRemove"
            android:scaleType="fitCenter"
            android:visibility="@{editing!=null &amp;&amp; editing &amp;&amp; unlinkable!=null &amp;&amp; unlinkable? View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/entityField3"
            app:layout_constraintRight_toLeftOf="@id/entityDeleteButton"
            app:layout_constraintTop_toTopOf="@id/entityField1"
            app:srcCompat="@drawable/ic_close" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/entityDeleteButton"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:onClick="tapRemove"
            android:scaleType="fitCenter"
            android:visibility="@{editing!=null &amp;&amp; editing &amp;&amp; deletable!=null &amp;&amp; deletable? View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/entityField3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/entityField1"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>