<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.lonn.studentassistant.utils.schedule.Utils" />

        <import type="android.view.View" />

        <variable
            name="administrator"
            type="com.lonn.studentassistant.firebaselayer.businessLayer.viewModels.AdministratorViewModel" />

        <variable
            name="coursesWithoutProfessors"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.businessLayer.viewModels.CourseViewModel&gt;" />

        <variable
            name="otherActivitiesWithoutProfessors"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.businessLayer.viewModels.OtherActivityViewModel&gt;" />

    </data>

    <ScrollView
        style="@style/ScrollViewFading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_page_background">

        <LinearLayout
            style="@style/ScreenLayoutWrapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                style="@style/DarkSubtitleShadowed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_16dp"
                android:gravity="start"
                android:text="@{`Welcome, ` + administrator.firstName + `!`}" />

            <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_16dp"
                android:layout_marginBottom="@dimen/dim_8dp"
                android:categoryTitle="@{`Courses without professors`}"
                android:childEntities="@{coursesWithoutProfessors}"
                android:showEmpty="@{true}" />

            <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:categoryTitle="@{`Activities without professors`}"
                android:childEntities="@{otherActivitiesWithoutProfessors}"
                android:showEmpty="@{true}" />

        </LinearLayout>
    </ScrollView>
</layout>