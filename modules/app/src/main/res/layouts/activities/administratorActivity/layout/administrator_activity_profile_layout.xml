<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.implementations.student.StudentActivity">

    <data>

        <import type="com.lonn.studentassistant.utils.Utils" />

        <import type="com.lonn.studentassistant.firebaselayer.entities.enums.PermissionLevel" />

        <variable
            name="administrator"
            type="com.lonn.studentassistant.firebaselayer.viewModels.AdministratorViewModel" />

        <variable
            name="profileImageContent"
            type="com.lonn.studentassistant.firebaselayer.viewModels.FileContentViewModel" />

        <variable
            name="personalFiles"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.FileMetadataViewModel&gt;" />

        <variable
            name="editing"
            type="Boolean" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        style="@style/ScreenLayoutWrapped"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            style="@style/ScreenLayoutWrapped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <include
                    layout="@layout/rounded_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:defaultImage="@{Utils.getDefaultPersonImageForName(administrator.firstName)}"
                    app:image="@{profileImageContent.fileContentBase64}"
                    app:size="@{200}"
                    app:editing="@{editing}" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/EntityActivityTitleHiddenEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@{editing? @drawable/edit_text_background : null}"
                        android:focusable="@{editing}"
                        android:gravity="end"
                        android:hint="@{editing &amp;&amp; (administrator.firstName == null || administrator.firstName.length() == 0)? `First name` : ``}"
                        android:importantForAutofill="no"
                        android:text="@={administrator.firstName}"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/EntityActivityTitleHiddenEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text=" " />

                    <EditText
                        style="@style/EntityActivityTitleHiddenEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@{editing? @drawable/edit_text_background : null}"
                        android:focusable="@{editing}"
                        android:gravity="start"
                        android:hint="@{editing &amp;&amp; (administrator.lastName == null || administrator.lastName.length() == 0)? `Last name` : ``}"
                        android:importantForAutofill="no"
                        android:text="@={administrator.lastName}"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        style="@style/DarkBlueShadowedH3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="end|center"
                        android:text="Email: " />

                    <EditText
                        android:id="@+id/profileEmailEditText"
                        style="@style/EntityActivityContentHiddenEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:enabled="false"
                        android:inputType="textEmailAddress"
                        android:text="@{administrator.email}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        style="@style/DarkBlueShadowedH3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="end|center"
                        android:text="Phone number: " />

                    <EditText
                        android:id="@+id/profilePhoneEditText"
                        style="@style/EntityActivityContentHiddenEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:enabled="false"
                        android:inputType="phone"
                        android:text="@{administrator.phoneNumber}" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <include
            layout="@layout/entity_activity_floating_buttons"
            app:editing="@{editing}"
            app:permissionLevel="@{PermissionLevel.WRITE}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
