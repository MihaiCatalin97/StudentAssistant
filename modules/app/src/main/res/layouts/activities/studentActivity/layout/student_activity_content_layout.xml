<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.lonn.studentassistant.firebaselayer.viewModels.abstractions.EntityViewModel" />

        <variable
            name="student"
            type="com.lonn.studentassistant.firebaselayer.viewModels.StudentViewModel" />

        <variable
            name="courses"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.CourseViewModel&gt;" />

        <variable
            name="professors"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.ProfessorViewModel&gt;" />

        <variable
            name="oneTimeClasses"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.OneTimeClassViewModel&gt;" />

        <variable
            name="recurringClasses"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.RecurringClassViewModel&gt;" />

        <variable
            name="otherActivities"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.OtherActivityViewModel&gt;" />

        <variable
            name="personalCourses"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.CourseViewModel&gt;" />

        <variable
            name="personalActivities"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.OtherActivityViewModel&gt;" />

        <variable
            name="profileImageContent"
            type="com.lonn.studentassistant.firebaselayer.viewModels.FileContentViewModel" />

        <variable
            name="editingProfile"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/DarkBlueShadow_LightBlue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/solid_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.implementations.student.StudentActivity"
        tools:showIn="@layout/student_activity_main_layout">

        <include
            android:id="@+id/layoutHome"
            layout="@layout/student_activity_home_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <include
            android:id="@+id/layoutProfile"
            layout="@layout/student_activity_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:personalActivities="@{personalActivities}"
            app:personalCourses="@{personalCourses}"
            app:profileImageContent="@{profileImageContent}"
            app:editing="@{editingProfile}"
            app:student="@{student}" />

        <include
            android:id="@+id/layoutSchedule"
            layout="@layout/student_activity_schedule_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:oneTimeClasses="@{oneTimeClasses}"
            app:recurringClasses="@{recurringClasses}" />

        <include
            android:id="@+id/layoutGrades"
            layout="@layout/student_activity_grades_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <include
            android:id="@+id/layoutMessages"
            layout="@layout/student_activity_messages_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <include
            android:id="@+id/layoutProfessors"
            layout="@layout/student_activity_professors_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:professors="@{professors}" />

        <include
            android:id="@+id/layoutCourses"
            layout="@layout/student_activity_courses_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:courses="@{courses}" />

        <include
            android:id="@+id/layoutAdministrative"
            layout="@layout/student_activity_administrative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <include
            android:id="@+id/layoutOtherActivities"
            layout="@layout/student_activity_other_activities_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:otherActivities="@{otherActivities}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
