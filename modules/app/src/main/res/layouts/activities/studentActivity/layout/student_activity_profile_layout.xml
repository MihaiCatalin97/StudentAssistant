<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.implementations.student.StudentActivity">

    <data>

        <import type="com.lonn.studentassistant.utils.Utils" />

        <variable
            name="student"
            type="com.lonn.studentassistant.firebaselayer.viewModels.StudentViewModel" />

        <variable
            name="optionalCourses"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.CourseViewModel&gt;" />

        <variable
            name="myOtherActivities"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.OtherActivityViewModel&gt;" />

        <variable
            name="profileImageContent"
            type="com.lonn.studentassistant.firebaselayer.viewModels.FileContentViewModel" />
    </data>

    <ScrollView
        style="@style/ScreenLayoutWrapped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/profileImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="Student Image"
                    android:scaleType="fitCenter"
                    app:defaultSrcCompat="@{Utils.getDefaultPersonImageForName(student.firstName)}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@{profileImageContent.fileContentBase64}" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="150dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintLeft_toLeftOf="@id/profileImage"
                app:layout_constraintTop_toTopOf="@id/profileImage">

                <ImageView
                    android:id="@+id/imageUploadButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Add image button"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_plus" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/titleProfileLayout"
                style="@style/DarkSubtitleShadowed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@{student.lastName + ` ` + student.firstName}"
                app:layout_constraintTop_toBottomOf="@id/profileImage" />

            <LinearLayout
                android:id="@+id/profileEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleProfileLayout">

                <TextView
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end|center"
                    android:text="Email: " />

                <EditText
                    android:id="@+id/profileEmailEditText"
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:text="@{student.email}" />

                <ImageView
                    android:id="@+id/profileEmailEditButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/profileEmailCancelButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_cancel" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profilePhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileEmailLayout">

                <TextView
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end|center"
                    android:text="Phone number: " />

                <EditText
                    android:id="@+id/profilePhoneEditText"
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    android:inputType="phone"
                    android:text="@{student.phoneNumber}" />

                <ImageView
                    android:id="@+id/profilePhoneEditButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/profilePhoneCancelButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_cancel" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileYearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePhoneLayout">

                <TextView
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end|center"
                    android:text="Year: " />

                <EditText
                    android:id="@+id/profileGroupEditText"
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:text="@{Integer.toString(student.year)}" />

                <ImageView
                    android:id="@+id/profileYearEditButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/profileYearCancelButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_cancel" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileGroupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileYearLayout">

                <TextView
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end|center"
                    android:text="Group: " />

                <EditText
                    android:id="@+id/profileYearEditText"
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:text="@{student.group}" />

                <ImageView
                    android:id="@+id/profileGroupEditButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/profileGroupCancelButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_cancel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@id/titleProfileLayout"
                app:layout_constraintTop_toBottomOf="@id/profileGroupLayout">

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`My optional courses`}"
                    android:childEntities="@{optionalCourses}"
                    android:entityName="@{`optional course`}"
                    android:permissionLevel="@{1}"
                    android:showEmpty="@{true}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`My activities`}"
                    android:childEntities="@{myOtherActivities}"
                    android:entityName="@{`activity`}"
                    android:permissionLevel="@{1}"
                    android:showEmpty="@{true}" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
