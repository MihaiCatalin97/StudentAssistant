<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.lonn.studentassistant.firebaselayer.viewModels.abstractions.EntityViewModel" />

        <variable
            name="user"
            type="com.lonn.studentassistant.firebaselayer.viewModels.UserViewModel" />

        <variable
            name="student"
            type="com.lonn.studentassistant.firebaselayer.viewModels.StudentViewModel" />

        <variable
            name="grades"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.GradeViewModel&gt;" />

        <variable
            name="courses"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.CourseViewModel&gt;" />

        <variable
            name="otherActivities"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.OtherActivityViewModel&gt;" />

        <variable
            name="professors"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.ProfessorViewModel&gt;" />

        <variable
            name="oneTimeClasses"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.OneTimeClassViewModel&gt;" />

        <variable
            name="recurringClasses"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.RecurringClassViewModel&gt;" />

        <variable
            name="personalCourses"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.CourseViewModel&gt;" />

        <variable
            name="personalActivities"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.OtherActivityViewModel&gt;" />

        <variable
            name="profileImageContent"
            type="com.lonn.studentassistant.firebaselayer.viewModels.FileContentViewModel" />

        <variable
            name="editingProfile"
            type="Boolean" />

        <variable
            name="nextScheduleClass"
            type="com.lonn.studentassistant.firebaselayer.viewModels.abstractions.ScheduleClassViewModel" />

        <variable
            name="nextExam"
            type="com.lonn.studentassistant.firebaselayer.viewModels.abstractions.ScheduleClassViewModel" />

        <variable
            name="timeToNextClass"
            type="Long" />

        <variable
            name="timeToNextExam"
            type="Long" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.implementations.student.StudentActivity">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </com.google.android.material.appbar.AppBarLayout>

            <include
                android:id="@+id/layoutMain"
                layout="@layout/student_activity_content_layout"
                app:courses="@{courses.values()}"
                app:editingProfile="@{editingProfile}"
                app:grades="@{grades.values()}"
                app:nextExam="@{nextExam}"
                app:nextScheduleClass="@{nextScheduleClass}"
                app:oneTimeClasses="@{oneTimeClasses.values()}"
                app:otherActivities="@{otherActivities.values()}"
                app:personalActivities="@{personalActivities.values()}"
                app:personalCourses="@{personalCourses.values()}"
                app:professors="@{professors.values()}"
                app:profileImageContent="@{profileImageContent}"
                app:recurringClasses="@{recurringClasses.values()}"
                app:student="@{student}"
                app:timeToNextClass="@{timeToNextClass}"
                app:timeToNextExam="@{timeToNextExam}" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <include
            android:id="@+id/loadingScreen"
            layout="@layout/loading_screen"
            android:visibility="visible" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/student_drawer" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
