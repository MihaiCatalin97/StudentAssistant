<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="com.lonn.studentassistant.firebaselayer.entities.Course" />

        <import type="com.lonn.studentassistant.views.EntityViewType" />

        <variable
            name="courses"
            type="java.util.List&lt;Course&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleCoursesLayout"
            style="@style/DarkBlueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Courses"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/titleCoursesLayout"
            app:layout_constraintTop_toBottomOf="@id/titleCoursesLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseBaseCategory
                    android:id="@+id/coursesBaseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory>

                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory>

                    <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseSemesterCategory
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:category_title="@{`Second semester`}"
                            app:show_empty="@{true}"
                            app:show_header="@{true}"
                            app:view_type="@{`FULL`}" />
                    </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseYearCategory>
                </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseBaseCategory>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
