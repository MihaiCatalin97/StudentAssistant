<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.implementations.student.StudentActivity">

    <data>

        <import type="com.lonn.studentassistant.utils.Utils" />

        <variable
            name="professor"
            type="com.lonn.studentassistant.firebaselayer.viewModels.ProfessorViewModel" />

        <variable
            name="optionalCourses"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.CourseViewModel&gt;" />

        <variable
            name="myOtherActivities"
            type="java.util.Collection&lt;com.lonn.studentassistant.firebaselayer.viewModels.OtherActivityViewModel&gt;" />

        <variable
            name="profileImageContent"
            type="com.lonn.studentassistant.firebaselayer.viewModels.FileContentViewModel" />
    </data>

    <ScrollView
        style="@style/ScreenLayoutWrapped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/profileImage"
                layout="@layout/rounded_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:defaultImage="@{Utils.getDefaultPersonImageForName(professor.firstName)}"
                app:image="@{profileImageContent.fileContentBase64}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:size="@{200}" />

            <TextView
                android:id="@+id/titleProfileLayout"
                style="@style/DarkSubtitleShadowed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@{professor.lastName + ` ` + professor.firstName}"
                app:layout_constraintTop_toBottomOf="@id/profileImage" />

            <LinearLayout
                android:id="@+id/profileEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleProfileLayout">

                <TextView
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end|center"
                    android:text="Email: " />

                <EditText
                    android:id="@+id/profileEmailEditText"
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:text="@{professor.email}" />

                <ImageView
                    android:id="@+id/profileEmailEditButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/profileEmailCancelButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_cancel" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profilePhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileEmailLayout">

                <TextView
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end|center"
                    android:text="Phone number: " />

                <EditText
                    android:id="@+id/profilePhoneEditText"
                    style="@style/DarkBlueShadowedH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    android:inputType="phone"
                    android:text="@{professor.phoneNumber}" />

                <ImageView
                    android:id="@+id/profilePhoneEditButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/profilePhoneCancelButton"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_cancel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@id/titleProfileLayout"
                app:layout_constraintTop_toBottomOf="@id/profilePhoneLayout">

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`My optional courses`}"
                    android:childEntities="@{optionalCourses}"
                    android:entityName="@{`optional course`}"
                    android:permissionLevel="@{1}"
                    android:showEmpty="@{true}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`My activities`}"
                    android:childEntities="@{myOtherActivities}"
                    android:entityName="@{`activity`}"
                    android:permissionLevel="@{1}"
                    android:showEmpty="@{true}" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
