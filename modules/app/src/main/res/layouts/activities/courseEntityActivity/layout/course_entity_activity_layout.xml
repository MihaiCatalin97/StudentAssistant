<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.implementations.entityActivities.course.CourseEntityActivity">

    <data>

        <import type="com.lonn.studentassistant.views.implementations.EntityViewComparatorHolder" />

        <import type="com.lonn.studentassistant.viewModels.CategoryViewModel" />

        <import type="com.lonn.studentassistant.databinding.CategoryGenerator" />

        <variable
            name="course"
            type="com.lonn.studentassistant.viewModels.entities.CourseViewModel" />
    </data>

    <ScrollView
        style="@style/ScreenLayoutWrapped"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EntityActivityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{course.name}" />

            <TextView
                style="@style/EntityActivitySubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{course.courseType}" />

            <TextView
                style="@style/EntityActivitySubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{course.yearSemester}" />

            <TextView
                style="@style/EntityActivityContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description" />

            <TextView
                style="@style/EntityActivityContentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{course.description}" />

            <TextView
                style="@style/EntityActivityContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website" />

            <TextView
                style="@style/EntityActivityContentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{course.website}"
                android:visibility="@{course.websiteVisible}" />

            <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                android:id="@+id/filesCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:categoryTitle="@{`Files`}"
                android:permissionLevel="@{1}"
                android:entityName="@{`file`}"/>

            <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:categoryTitle="@{`Professors`}"
                android:childEntities="@{course.professors}"
                android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_PROFESSOR_NAME_COMPARATOR}" />

            <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:categoryTitle="@{`Regular schedule`}"
                android:childEntities="@{course.recurringClasses}"
                android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_FIELD1_COMPARATOR}"
                android:showEmpty="@{false}"
                android:subcategoryGeneratorFunction="@{(category) -> CategoryGenerator.scheduleCategories((CategoryViewModel) category)}"
                app:isTable="@{true}" />

            <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:categoryTitle="@{`Special schedule`}"
                android:childEntities="@{course.oneTimeClasses}"
                android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_FIELD1_COMPARATOR}"
                android:showEmpty="@{false}"
                android:subcategoryDynamicGeneratorFunction="@{(category) -> CategoryGenerator.oneTimeScheduleCategories((CategoryViewModel) category, course.oneTimeClasses)}"
                app:isTable="@{true}" />
        </LinearLayout>
    </ScrollView>
</layout>