<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.implementations.entityActivities.course.CourseEntityActivity">

    <data>

        <import type="com.lonn.studentassistant.views.implementations.EntityViewComparatorHolder" />

        <import type="com.lonn.studentassistant.viewModels.CategoryViewModel" />

        <import type="com.lonn.studentassistant.databinding.CategoryGenerator" />

        <variable
            name="entity"
            type="com.lonn.studentassistant.firebaselayer.viewModels.CourseViewModel" />

        <variable
            name="files"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.FileMetadataViewModel&gt;" />

        <variable
            name="professors"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.ProfessorViewModel&gt;" />

        <variable
            name="oneTimeClasses"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.OneTimeClassViewModel&gt;" />

        <variable
            name="recurringClasses"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.RecurringClassViewModel&gt;" />

        <variable
            name="laboratories"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.LaboratoryViewModel&gt;" />

        <variable
            name="students"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.StudentViewModel&gt;" />

        <variable
            name="pendingStudents"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.StudentViewModel&gt;" />

        <variable
            name="allStudents"
            type="java.util.Map&lt;String, com.lonn.studentassistant.firebaselayer.viewModels.StudentViewModel&gt;" />

        <variable
            name="editing"
            type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            style="@style/ScreenLayoutWrapped"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/courseEntityActivityName"
                    style="@style/EntityActivityTitleHiddenEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@{editing? @drawable/edit_text_background : null}"
                    android:enabled="@{editing}"
                    android:hint="Enter name"
                    android:importantForAutofill="no"
                    android:text="@={entity.name}" />

                <TextView
                    style="@style/EntityActivitySubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{entity.courseType + `\n\n` + entity.cyclesAndSpecializations + `\n` + entity.semesterString}" />

                <TextView
                    style="@style/EntityActivityContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description" />

                <EditText
                    android:id="@+id/courseEntityActivityDescription"
                    style="@style/EntityActivityContentHiddenEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@{editing? @drawable/edit_text_background : null}"
                    android:enabled="@{editing}"
                    android:hint="Enter description"
                    android:importantForAutofill="no"
                    android:text="@={entity.description}" />

                <TextView
                    style="@style/EntityActivityContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website" />

                <EditText
                    android:id="@+id/courseEntityActivityWebsite"
                    style="@style/EntityActivityContentHiddenEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@{editing? @drawable/edit_text_background : null}"
                    android:enabled="@{editing}"
                    android:hint="Enter website"
                    android:importantForAutofill="no"
                    android:text="@={entity.website}"
                    android:visibility="@{entity.websiteVisible}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:id="@+id/laboratoriesCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Laboratories`}"
                    android:childEntities="@{laboratories.values().size() > 0? laboratories.values() : null}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_LABORATORY_WEEK_COMPARATOR}"
                    android:deletable="@{true}"
                    android:editing="@{editing}"
                    android:entityName="@{`laboratory`}"
                    android:permissionLevel="@{1}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:id="@+id/studentCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Students`}"
                    android:childEntities="@{students.values().size() > 0? students.values() : null}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_TITLE_COMPARATOR}"
                    android:editing="@{editing}"
                    android:entityName="@{`students`}"
                    android:permissionLevel="@{0}"
                    android:showEmpty="@{true}"
                    android:subcategoryDynamicGeneratorFunction="@{(category) -> CategoryGenerator.courseStudentCategories((CategoryViewModel) category, entity)}"
                    android:unlinkable="@{true}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:id="@+id/filesCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Files`}"
                    android:childEntities="@{files.values().size() > 0? files.values() : null}"
                    android:deletable="@{true}"
                    android:editing="@{editing}"
                    android:entityName="@{`file`}"
                    android:permissionLevel="@{1}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:id="@+id/professorsCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Professors`}"
                    android:childEntities="@{professors.values()}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_PROFESSOR_NAME_COMPARATOR}"
                    android:editing="@{editing}"
                    android:entityName="@{`professor`}"
                    android:permissionLevel="@{1}"
                    android:unlinkable="@{true}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:id="@+id/recurringClassesCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Regular schedule`}"
                    android:childEntities="@{recurringClasses.values()}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_FIELD1_COMPARATOR}"
                    android:deletable="@{true}"
                    android:editing="@{editing}"
                    android:entityName="@{`regular class`}"
                    android:permissionLevel="@{1}"
                    android:showEmpty="@{false}"
                    android:subcategoryGeneratorFunction="@{(category) -> CategoryGenerator.scheduleCategories((CategoryViewModel) category)}"
                    app:isTable="@{true}"
                    app:showAddButton="@{true}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:id="@+id/oneTimeClassesCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Special schedule`}"
                    android:childEntities="@{oneTimeClasses.values()}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_FIELD1_COMPARATOR}"
                    android:deletable="@{true}"
                    android:editing="@{editing}"
                    android:entityName="@{`one time class`}"
                    android:permissionLevel="@{1}"
                    android:showEmpty="@{false}"
                    android:subcategoryDynamicGeneratorFunction="@{(category) -> CategoryGenerator.oneTimeScheduleCategories((CategoryViewModel) category, oneTimeClasses.values())}"
                    app:isTable="@{true}"
                    app:showAddButton="@{true}" />
            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/entity_activity_floating_buttons"
            app:editing="@{editing}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>