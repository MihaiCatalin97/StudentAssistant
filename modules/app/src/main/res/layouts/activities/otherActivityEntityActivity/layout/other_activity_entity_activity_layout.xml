<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.implementations.entityActivities.otherActivity.OtherActivityEntityActivity">

    <data>

        <import type="com.lonn.studentassistant.databinding.CategoryGenerator" />

        <import type="com.lonn.studentassistant.viewModels.CategoryViewModel" />

        <import type="com.lonn.studentassistant.views.implementations.EntityViewComparatorHolder" />

        <variable
            name="otherActivity"
            type="com.lonn.studentassistant.viewModels.entities.OtherActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ScreenLayoutWrapped"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/activityTitle"
            style="@style/DarkTitleShadowed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{otherActivity.name}"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activityType"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@{otherActivity.type}"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/activityTitle" />

        <TextView
            android:id="@+id/activityYearAndSemester"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{otherActivity.yearSemester}"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/activityType" />

        <TextView
            android:id="@+id/activityDescription"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@{otherActivity.description}"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activityYearAndSemester" />

        <TextView
            android:id="@+id/activityWebSite"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{otherActivity.website}"
            android:textSize="18sp"
            android:visibility="@{otherActivity.websiteVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activityDescription" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/activityWebSite"
            app:layout_constraintTop_toBottomOf="@id/activityWebSite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:id="@+id/professorsBaseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Professors`}"
                    android:entityName="@{`professor`}"
                    android:childEntities="@{otherActivity.professors}"/>

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Regular schedule`}"
                    android:childEntities="@{otherActivity.recurringClasses}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_FIELD1_COMPARATOR}"
                    android:showEmpty="@{false}"
                    android:showHeader="@{false}"
                    android:entityName="@{`regular class`}"
                    android:subcategoryGeneratorFunction="@{(category) -> CategoryGenerator.scheduleCategories((CategoryViewModel) category)}"
                    app:isTable="@{true}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:id="@+id/scheduleBaseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Special schedule`}"
                    android:childEntities="@{otherActivity.oneTimeClasses}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_FIELD1_COMPARATOR}"
                    android:showHeader="@{false}"
                    android:showEmpty="@{false}"
                    android:subcategoryDynamicGeneratorFunction="@{(category) -> CategoryGenerator.oneTimeScheduleCategories((CategoryViewModel) category, otherActivity.oneTimeClasses)}"
                    app:isTable="@{true}" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>