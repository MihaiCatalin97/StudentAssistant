<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="otherActivity"
            type="com.lonn.studentassistant.viewModels.entities.OtherActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/solid_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/activityTitle"
            style="@style/DarkBlueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@{otherActivity.activityName}"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activityType"
            style="@style/DarkBlueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@{otherActivity.activityType}"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/activityTitle" />

        <TextView
            android:id="@+id/activityYearAndSemester"
            style="@style/DarkBlueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{otherActivity.activityYearSemester}"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/activityType" />

        <TextView
            android:id="@+id/activityDescription"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@{otherActivity.description}"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activityYearAndSemester" />

        <TextView
            android:id="@+id/activityWebSite"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{otherActivity.website}"
            android:textSize="18sp"
            android:visibility="@{otherActivity.websiteVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activityDescription" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/activityWebSite"
            app:layout_constraintTop_toBottomOf="@id/activityWebSite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lonn.studentassistant.views.implementations.categories.professorCategories.ProfessorBaseCategory
                    android:id="@+id/professorsBaseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:category_title="Professors"
                    app:view_type="PARTIAL" />

                <com.lonn.studentassistant.views.implementations.categories.scheduleCategories.ScheduleBaseCategory
                    android:id="@+id/scheduleBaseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:category_title="Schedule"
                    app:subcategories_to_generate="days"
                    app:view_type="PARTIAL" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>