<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.implementations.professorEntity.ProfessorEntityActivity">

    <data>

        <variable
            name="professor"
            type="com.lonn.studentassistant.viewModels.entities.ProfessorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/solid_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/professorImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Professor Image"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@{professor.professorImage}" />

        <TextView
            android:id="@+id/professorName"
            style="@style/DarkBlueTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@{professor.fullName}"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorImage" />

        <TextView
            android:id="@+id/professorEmail"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@{`Email: ` + professor.email}"
            android:textSize="18sp"
            android:visibility="@{professor.emailVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorName" />

        <TextView
            android:id="@+id/professorPhoneNumber"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Phone number: ` + professor.phoneNumber}"
            android:textSize="18sp"
            android:visibility="@{professor.phoneNumberVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorEmail" />

        <TextView
            android:id="@+id/professorWebsite"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Website: ` + professor.website}"
            android:textSize="18sp"
            android:visibility="@{professor.websiteVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorPhoneNumber" />

        <TextView
            android:id="@+id/professorCabinet"
            style="@style/DarkBlueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Cabinet: ` + professor.cabinet}"
            android:textSize="18sp"
            android:visibility="@{professor.cabinetVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorWebsite" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/professorCabinet"
            app:layout_constraintTop_toBottomOf="@id/professorCabinet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseBaseCategory
                    android:id="@+id/coursesBaseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Courses`}">

                </com.lonn.studentassistant.views.implementations.categories.courseCategories.CourseBaseCategory>

                <com.lonn.studentassistant.views.implementations.categories.otherActivityCategories.OtherActivityBaseCategory
                    android:id="@+id/otherActivitiesBaseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Other activities`}"
                    android:viewType="@{`PARTIAL`}" />

                <com.lonn.studentassistant.views.implementations.categories.scheduleCategories.ScheduleBaseCategory
                    android:id="@+id/scheduleBaseCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Schedule`}"
                    android:viewType="@{`PARTIAL`}" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>