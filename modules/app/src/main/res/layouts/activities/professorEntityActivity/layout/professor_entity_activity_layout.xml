<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.implementations.entityActivities.professor.ProfessorEntityActivity">

    <data>

        <import type="com.lonn.studentassistant.viewModels.CategoryViewModel" />

        <import type="com.lonn.studentassistant.views.implementations.EntityViewComparatorHolder" />

        <import type="com.lonn.studentassistant.databinding.CategoryGenerator" />

        <variable
            name="professor"
            type="com.lonn.studentassistant.viewModels.entities.ProfessorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ScreenLayoutWrapped"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/professorImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Professor Image"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@{professor.professorImage}" />

        <TextView
            android:id="@+id/professorName"
            style="@style/DarkTitleShadowed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@{professor.fullName}"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorImage" />

        <TextView
            android:id="@+id/professorEmail"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@{`Email: ` + professor.email}"
            android:textSize="18sp"
            android:visibility="@{professor.emailVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorName" />

        <TextView
            android:id="@+id/professorPhoneNumber"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Phone number: ` + professor.phoneNumber}"
            android:textSize="18sp"
            android:visibility="@{professor.phoneNumberVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorEmail" />

        <TextView
            android:id="@+id/professorWebsite"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Website: ` + professor.website}"
            android:textSize="18sp"
            android:visibility="@{professor.websiteVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorPhoneNumber" />

        <TextView
            android:id="@+id/professorCabinet"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`Cabinet: ` + professor.cabinet}"
            android:textSize="18sp"
            android:visibility="@{professor.cabinetVisible}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professorWebsite" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/professorCabinet"
            app:layout_constraintTop_toBottomOf="@id/professorCabinet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Courses`}"
                    android:childEntities="@{professor.courses}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_TITLE_COMPARATOR}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Other activities`}"
                    android:childEntities="@{professor.otherActivities}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_TITLE_COMPARATOR}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Regular schedule`}"
                    android:childEntities="@{professor.recurringClasses}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_FIELD1_COMPARATOR}"
                    android:isTable="@{true}"
                    android:showEmpty="@{false}"
                    android:showHeader="@{true}"
                    android:subcategoryGeneratorFunction="@{(category) -> CategoryGenerator.scheduleCategories((CategoryViewModel) category)}" />

                <com.lonn.studentassistant.views.implementations.category.ScrollViewCategory
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:categoryTitle="@{`Special schedule`}"
                    android:childEntities="@{professor.oneTimeClasses}"
                    android:childEntityComparator="@{EntityViewComparatorHolder.ASCENDING_FIELD1_COMPARATOR}"
                    android:isTable="@{true}"
                    android:showEmpty="@{false}"
                    android:showHeader="@{true}"
                    android:subcategoryDynamicGeneratorFunction="@{(category) -> CategoryGenerator.oneTimeScheduleCategories((CategoryViewModel) category, professor.oneTimeClasses)}" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>