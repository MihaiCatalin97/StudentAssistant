<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="recurringClass"
            type="com.lonn.studentassistant.viewModels.entities.RecurringClassViewModel" />
    </data>

    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/table_line"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/entityField1"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:gravity="center"
            android:lines="2"
            android:padding="2dp"
            android:text="@{recurringClass.hours}"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/entityField2"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.56"
            android:gravity="center"
            android:maxLines="@{2}"
            android:padding="2dp"
            android:text="@{recurringClass.disciplineName}"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/entityField3"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:lines="@{recurringClass.typeNumberOfLines}"
            android:padding="2dp"
            android:text="@{recurringClass.formattedType}"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/entityField4"
            style="@style/DarkBlueShadowedH3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:gravity="center"
            android:lines="@{recurringClass.numberOfRooms}"
            android:padding="2dp"
            android:text="@{recurringClass.rooms}"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/entityRemoveButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_close" />
    </TableRow>
</layout>