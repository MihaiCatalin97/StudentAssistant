<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="entityViewModel"
            type="com.lonn.studentassistant.viewModels.ScrollViewEntityViewModel"/>
    </data>
    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/table_line">
        <TextView
            android:id="@+id/entityField1"
            style="@style/DarkBlueShadowedH3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.12"
            android:text="@{entityViewModel.field1}"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:lines="2"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/entityField2"
            style="@style/DarkBlueShadowedH3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.56"
            android:text="@{entityViewModel.field2}"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:maxLines="@{entityViewModel.field2LineCount}"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/entityField3"
            style="@style/DarkBlueShadowedH3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:text="@{entityViewModel.field3}"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:lines="@{entityViewModel.field3LineCount}"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/entityField4"
            style="@style/DarkBlueShadowedH3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.12"
            android:text="@{entityViewModel.field4}"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            android:gravity="center"
            android:lines="@{entityViewModel.field4LineCount}"
            android:padding="2dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/entityRemoveButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_close"
            android:scaleType="fitCenter"
            android:layout_marginBottom="4dp"
            android:visibility="@{entityViewModel.permissionLevel > 2? View.VISIBLE:View.GONE}"/>
    </TableRow>
</layout>